EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@styleghor.com

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.vercel.app